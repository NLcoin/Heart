<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/loading_container" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@id/loading_progressbar" style="@style/loading_progress_container">
        <ProgressBar android:id="@id/progress_loading" style="@style/loading_progressbar" />
        <TextView android:id="@id/txt_loading" style="@style/loading_text" />
    </LinearLayout>
    <RelativeLayout android:id="@id/loading_nocontent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:id="@id/img_nocontent" android:contentDescription="@string/app_name" style="@style/live_record_error_img" />
        <TextView android:id="@id/txt_nocontent" android:layout_below="@id/img_nocontent" style="@style/live_record_error_text" />
    </RelativeLayout>
</RelativeLayout>